{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@engine/*": ["engine/*"],
      "@game/*": ["game/*"]
    }
  },
  "include": ["src", "engine", "game", "vite-env.d.ts"]
}
